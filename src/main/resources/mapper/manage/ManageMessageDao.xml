<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.manage.dao.ManageMessageDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.manage.entity.ManageMessageEntity" id="manageMessageMap">
        <result property="msId" column="ms_id"/>
        <result property="msContent" column="ms_content"/>
        <result property="msFrom" column="ms_from"/>
        <result property="msTo" column="ms_to"/>
        <result property="createTime" column="create_time"/>
        <result property="isRead" column="is_read"/>
        <collection property="msFromUser" ofType="io.renren.modules.sys.entity.SysUserEntity" select="getUserById"
                    column="{userId=ms_from}">
            <result property="userId" column="user_id"/>
            <result property="username" column="username"/>
            <result property="chineseName" column="chinese_name"/>
        </collection>
        <collection property="msToUser" ofType="io.renren.modules.sys.entity.SysUserEntity" select="getUserById"
                    column="{userId=ms_to}">
            <result property="userId" column="user_id"/>
            <result property="username" column="username"/>
            <result property="chineseName" column="chinese_name"/>
        </collection>
    </resultMap>
    <insert id="notifyAllPunch">
        insert into manage_message(ms_content, ms_from, ms_to, create_time, is_read)
            (select #{content,jdbcType=VARCHAR} as ms_content,
                    0                           as ms_from,
                    user_id                     as ms_to,
                    NOW()                       as create_time,
                    0                           as is_read
             from sys_user)
    </insert>
    <select id="selectPageVo" resultMap="manageMessageMap">
        select * from manage_message
        where ms_to = #{userId,jdbcType=BIGINT}
        <if test="isRead != null">
            and is_read = #{isRead,jdbcType=INTEGER}
        </if>
    </select>
    <select id="getUserById" resultType="io.renren.modules.sys.entity.SysUserEntity">
        <choose>
            <when test="userId != null and userId != 0">
                select user_id, username, chinese_name
                from sys_user
                where user_id = #{userId};
            </when>
            <otherwise>
                select 0 as user_id, 'system' as username, '系统通知' as chinese_name
                from dual
            </otherwise>
        </choose>
    </select>

</mapper>
